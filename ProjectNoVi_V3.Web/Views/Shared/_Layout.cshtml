@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectNoVi_V3.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectNoVi_V3.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand w-25" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="w-25" src="~/images/png/logo-no-background.png" /> 
                </a>                                                                                                @* Nav Bar Logo *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>             @*User - Opto - Admin*@
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="tree" aria-expanded="false">@Localizer["OnsAanbod"]</a>
                            <div class="dropdown-menu">
                                
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">@Localizer["All_Glasses"]</a>                            @*User - Admin*@
                            @*
                                _TODO

                                @foreach (var Brand in Model)
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index" asp-route-type="0">@Localizer["Regular_Glasses"]</a>      User - Admin
                            *@
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index" asp-route-type="0">@Localizer["Regular_Glasses"]</a>     @*User - Admin*@
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index" asp-route-type="1">@Localizer["Sun_Glasses"]</a>         @*User - Admin*@
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index" asp-route-type="3">@Localizer["Monthly_lenses"]</a>      @*User - Admin*@
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index" asp-route-type="2">@Localizer["Daily_lenses"]</a>        @*User - Admin*@
                            </div>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCartControllerV2" asp-action="Index">@Localizer["Shopping_Card"]</a>          @*User - Opto - Admin*@
                            </li>
                        }
                        
                        @if (User.IsInRole("Optometrist") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="tree" aria-expanded="false">@Localizer["Optometrist"]</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">@Localizer["Products"]</a>       @*Opto - Admin*@
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Brands" asp-action="Index">@Localizer["Brands"]</a>           @*Opto - Admin*@
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Sales" asp-action="Index">@Localizer["Sales"]</a>             @*Opto - Admin*@
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="tree" aria-expanded="false">Admin</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">@Localizer["Users"]</a>            @*Admin*@
                                </div>
                            </li>
                        }
                    </ul>

                    @*verwijzing naar LanguagePatial *@
                    <partial name="_LanguagePartial" />
                    <partial name="_LoginPartial" /> 

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ProjectNoVi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
